<%= form_for([:admin, @group], html: {class: "form-horizontal"}) do |f| %>
    <%= f.hidden_field(:identity, value: 2) %>
    <fieldset class="inputs">
      <legend><span>添加群组</span></legend>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">群主</label>

        <div class="col-sm-10">
          <%= f.text_field(:owner, class: 'form-control', placeholder: '请输入群主到号') %>
        </div>
      </div>

      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">群名称</label>

        <div class="col-sm-10">
          <%= f.text_field(:name, class: 'form-control', placeholder: '请输入群名称') %>
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">健身兴趣</label>

        <div class="col-sm-10">
          <%= f.select(:hobby, INTERESTS['items'].map { |item| [item['name'], item['id']] }, {selected: (f.object.interests.split(',') rescue []), include_blank: false}, {multiple: true}) %>
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">群组介绍</label>

        <div class="col-sm-10">
          <%= f.text_area(:intro, placeholder: '请输入群组介绍') %>
        </div>
      </div>
    </fieldset>
    <%= f.submit('提交') %>
<% end %>
<script type="text/javascript">
    $('#group_hobby').multiselect();
</script>