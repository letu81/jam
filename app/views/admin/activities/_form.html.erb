<%= form_for([:admin, @activity], html: {class: "form-horizontal"}) do |f| %>
    <fieldset class="inputs">
      <legend><span>添加活动</span></legend>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">标题</label>

        <div class="col-sm-10">
          <%= f.text_field(:title, class: 'form-control', placeholder: '请输入活动标题') %>
        </div>
      </div>

      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">封面</label>

        <div class="col-sm-10">
          <%= f.file_field(:cover) %>
        </div>
      </div>

      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">活动详情</label>

        <div class="col-sm-10">
          <%= f.cktext_area(:content, placeholder: '请输入活动詳情') %>
        </div>
      </div>
    </fieldset>
    <%= f.submit('提交') %>
<% end %>
