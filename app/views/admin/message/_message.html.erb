<%= form_tag(push_message_path, {class: 'form-horizontal'}) do %>
    <fieldset class="inputs">
      <legend><span>推送消息</span></legend>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">用戶</label>

        <div class="col-sm-10">
          <%= text_field_tag(:users, '', class: 'form-control', placeholder: '请输入被推送者的美型号，如果全员推送，请填写为all') %>
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">消息内容</label>

        <div class="col-sm-10">
          <%= text_area_tag(:message, '', class: 'form-control', placeholder: '请输入推送内容') %>
        </div>
      </div>
    </fieldset>
    <%= submit_tag('提交') %>
<% end %>