<%= form_tag(service_message_path(@service), {class: 'form-horizontal'}) do %>
    <fieldset class="inputs">
      <legend><span>推送消息</span></legend>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">用戶</label>

        <div class="col-sm-10">
          <%= select_tag(:target, options_for_select([['全部',1],['购课学员',2],['扫码学员',3]]), include_hidden: false) %>
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">消息内容</label>

        <div class="col-sm-10">
          <%= text_area_tag(:message) %>
        </div>
      </div>
    </fieldset>
    <%= submit_tag('提交') %>
<% end %>
<script type="text/javascript">
    $('#target').multiselect();
</script>