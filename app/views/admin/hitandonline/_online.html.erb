<script type="text/javascript">

    $(function () {
        var data = [
            {
                name: '设备数量',
                value: <%= raw online%>,
                color: '#1385a5'
            }
        ];
        var chart = new iChart.ColumnMulti2D({
            render: 'order',
            data: data,
            labels: <%=raw period%>,
            title: '',
            width: 800,
            height: 400,
            background_color: '#ffffff',
            legend: {
                enable: true,
                background_color: null,
                border: {
                    enable: false
                }
            },
            coordinate: {
                background_color: '#f1f1f1',
                scale: [{
                    position: 'left',
                    start_scale: 0,
                    end_scale: 140,
                    scale_space: 20
                }],
                width: 600,
                height: 260
            }
