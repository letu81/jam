      <legend><span>图库分类</span></legend>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">分类</label>

        <div class="col-sm-10">
          <%= text_field_tag('tag', tags.join(','), class: 'form-control', placeholder: '请输入最新到版本号') %>
        </div>
      </div>
    </fieldset>
    <%= submit_tag('提交') %>
<% end %>
