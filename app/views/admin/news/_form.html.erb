<%= form_for([:admin, @news], html: {class: "form-horizontal"}) do |f| %>
    <fieldset class="inputs">
      <legend><span>发布新闻</span></legend>
      <div class="form-group form-group-sm"> 
        <label class="col-sm-2 control-label" for="service_interests">分类:</label> 
        <div class="col-sm-10"> 
           <%= f.select(:tag, News::TAG, {selected: (f.object.tag), include_blank: false}) %> 
        </div> 
      </div> 
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">标题</label>

        <div class="col-sm-10">
          <%= f.text_field(:title, class: 'form-control', placeholder: '请输入新闻标题') %>
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">封面</label>

        <div class="col-sm-10">
          <%= f.file_field(:cover) %>
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="service_interests">介绍</label>

        <div class="col-sm-10">
          <%= f.cktext_area(:content) %>
        </div>
      </div>
    </fieldset>
    <%= f.submit('提交') %>
<% end %>
